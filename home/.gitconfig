[include]
	path = ~/.gitconfig.local
[core]
	excludesfile = ~/.gitignore_global
  #pager = diff-so-fancy | less --tabs=4 -RFX
[push]
	default = simple
#[diff]
#	renames = true
#	compactionHeuristic = true
[credential]
	helper = /Users/nmuerdte/bin/git-credential-osxkeychain
[grep]
	lineNumber = true
	patternType = extended
[color "grep"]
	filename = green bold
	match = normal yellow
	linenumber = yellow bold
[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
[mergetool]
	keepBackup = false
	prompt = false
[pager]
	grep = false
[user]
	email = nick.muerdter@nrel.gov
	name = Nick Muerdter
[diff-so-fancy]
	changeHunkIndicators = false
	stripLeadingSymbols = false
	useUnicodeRuler = false
	markEmptyLines = false
